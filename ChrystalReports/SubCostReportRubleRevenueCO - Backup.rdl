        <CommandText>DECLARE @ProjectID int
DECLARE @OriginalContractValueExcVAT numeric(11,2)
DECLARE @AddendumSignedExcVAT numeric(11,2)
DECLARE @ChangeOrderSignedExcVAT numeric(11,2)
DECLARE @TotalRevenueExcVAT numeric(11,2)
DECLARE @TotalCostExcVAT numeric(11,2)
DECLARE @MarginExcVAT numeric(11,2)
DECLARE @MarginPercent numeric(11,2)

SET @OriginalContractValueExcVAT =
	(
	-- Original Contract Value
	SELECT (case when [ContractAmount] IS null then 0 else [ContractAmount] end) AS OriginalContractValueExcVAT  FROM [Table1_Project]  WHERE ProjectID = @ProjectID
	)

SET @AddendumSignedExcVAT =
	(
	-- Addendum Signed
	SELECT     SUM(CASE WHEN AddendumAmount IS NULL THEN 0 ELSE AddendumAmount END) AS Expr1
	FROM         dbo.Table1_Project LEFT OUTER JOIN
						  dbo.Table_ProjectAddendum ON dbo.Table1_Project.ProjectID = dbo.Table_ProjectAddendum.ProjectID
	WHERE     (dbo.Table1_Project.ProjectID = @ProjectID)
	)

SET @ChangeOrderSignedExcVAT =
	(
	-- Change Order
	SELECT case when [ChangeOrderSignedExcVAT] is null then 0 else [ChangeOrderSignedExcVAT] end FROM [Table1_Project]  WHERE ProjectID = @ProjectID
	)

SET @TotalRevenueExcVAT =
	@OriginalContractValueExcVAT + @AddendumSignedExcVAT + @ChangeOrderSignedExcVAT

SET @TotalCostExcVAT =
	(
	SELECT 
	(
	SELECT     
	SUM(CASE 
		WHEN Table1_Project.ContractCurrency = N'Rub' THEN ([PoTotalRubleExcVAT])
		WHEN Table1_Project.ContractCurrency = N'Euro' THEN ([PoTotalEuroExcVAT])
		WHEN Table1_Project.ContractCurrency = N'Dollar' THEN ([PoTotalDollarExcVAT])
		END ) AS TotalCostExcVAT
	FROM         dbo.Table1_Project INNER JOIN
						  dbo.Table2_PONo ON dbo.Table1_Project.ProjectID = dbo.Table2_PONo.Project_ID INNER JOIN
						  dbo.View_QryW3 ON dbo.Table2_PONo.PO_No = dbo.View_QryW3.PO_No
	WHERE     (dbo.Table1_Project.ProjectID = @ProjectID)) AS TotalCostExcVAT		
	)
	
SET @MarginExcVAT =	@TotalRevenueExcVAT - @TotalCostExcVAT

IF (@TotalRevenueExcVAT = 0)
	SET @MarginPercent = 0
ELSE
	SET @MarginPercent = @MarginExcVAT / @TotalRevenueExcVAT * 100

SELECT N'Original Contract Value Exc. VAT' AS Description, @OriginalContractValueExcVAT  as Figures
UNION ALL
SELECT N'Addendum Signed Exc. VAT', @AddendumSignedExcVAT 
UNION ALL
SELECT N'Change Order Signed Exc. VAT', @ChangeOrderSignedExcVAT 
UNION ALL
SELECT N'Total Revenue Exc. VAT', @TotalRevenueExcVAT 
UNION ALL
SELECT N'Total Cost Exc. VAT', @TotalCostExcVAT 
UNION ALL
SELECT N'Margin Exc. VAT', @MarginExcVAT 
UNION ALL
SELECT N'Margin %', @MarginPercent</CommandText>
