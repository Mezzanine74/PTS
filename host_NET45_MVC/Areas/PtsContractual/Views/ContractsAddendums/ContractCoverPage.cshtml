                        </tr>
                    </table>


                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <table class="table_" cellspacing="0" border="0">
                        <tbody>
                            <tr>
                                <th class="header_gridview" scope="col">@BodyTexts.Ref("sal97FKWUUyfFvfUfOtGbw", BodyTexts.Lang.rus)</th>
                                <th class="header_gridview" scope="col">@BodyTexts.Ref("s3ecZ5CCmEqb/fEE88FWgA", BodyTexts.Lang.rus)</th>
                                <th class="header_gridview" scope="col">@BodyTexts.Ref("IEJKYjD4SEiN3QML4oENDw", BodyTexts.Lang.rus)</th>
                            </tr>

                            @foreach (var item in Model.ApprovalStatusContractEFs)
                            {
                                string _true_false;
                                if (item.Approved == 1) { _true_false = @BodyTexts.Ref("2TUx46Nv1UeQLerDF4GQjA", BodyTexts.Lang.rus); } else { _true_false = @BodyTexts.Ref("sl3la1Y+vUmYXJQRX9Mosw", BodyTexts.Lang.rus); };

                                string _whoApproved = "";
                                if (item.UserName == "lawyers") { _whoApproved = " <br/> (" + item.WhoApprovedFromLawyers + ")"; };

                                <tr>
                                    <td class="second_gridview">@item.UserName @Html.Raw(_whoApproved) </td>
                                    <td class="second_gridview">@_true_false</td>
                                    <td class="second_gridview">@item.WhenApproved</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </td>
            </tr>


